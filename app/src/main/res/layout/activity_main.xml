<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.opet.tds.pokeapiapp.Activity.MainActivity">

    <EditText
        android:id="@+id/textBusca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite O Nome Do Pokemon"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="125dp"
        android:hint="Buscar Pokemon"
        android:onClick="BuscaPokemon"/>


    <ImageView
        android:id="@+id/imvImagem"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="100dp"/>

    <ProgressBar
        android:id="@+id/progressConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"/>
    <TextView
        android:hint="ID Do Pokemon"
        android:id="@+id/textID"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:hint="Nome Do Pokemon"
        android:id="@+id/textName"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:hint="Altura Do Pokemon"
        android:id="@+id/textHeight"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:hint="Peso Do Pokemon"
        android:id="@+id/textWeight"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:hint="Tipos"
        android:id="@+id/textTypes"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    

</LinearLayout>
